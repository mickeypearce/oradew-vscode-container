{
  "name": "Oradew",
  "dockerFile": "Dockerfile",
  "extensions": [
    "mp.oradew-vscode",
    "eamodio.gitlens",
    "alefragnani.Bookmarks"
  ],
  // Mounting local configuration files directory (tnsnames.ora, ...) into container target
  // "mounts": ["source=C:/oracle/x86/product/11.2.0/client_1/network/admin,target=/usr/lib/oracle/19.5/client64/lib/network/admin,type=bind,consistency=cached"]
  // Mount using ORACLE_HOME local variable
  "mounts": [
    "source=${localEnv:ORACLE_HOME}/network/admin,target=/usr/lib/oracle/19.3/client64/lib/network/admin,type=bind,consistency=cached"
  ],
  "settings": {
    "oradew.cliExecutable": "sqlplus",
    "files.associations": {
      "*.sql": "plsql"
    }
  },
  "remoteEnv": {    
    // "NLS_LANG": "AMERICAN_AMERICA.AL32UTF8",
    // Set Sqlplus for oradew CLI
    "ORADEW_CLI_EXECUTABLE": "sqlplus"
  },
  // Install oradew CLI command 
  "postCreateCommand": "cd /root/.vscode-server/extensions/mp.oradew-vscode-* && npm run install-cli"
}